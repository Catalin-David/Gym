<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:id="@+id/leftRelLayout">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="See your plan"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:id="@+id/btnSeePlan"
            android:background="@drawable/custom_button"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="See all activities"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:id="@+id/btnSeeActivities"
            android:layout_below="@id/btnSeePlan"
            android:layout_marginTop="100dp"
            android:background="@drawable/custom_button"/>

        <Button
            android:layout_marginTop="100dp"
            android:background="@drawable/custom_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="About us"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:id="@+id/btnAboutUs"
            android:layout_below="@id/btnSeeActivities"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:src="@mipmap/athlete"
        />
</RelativeLayout>